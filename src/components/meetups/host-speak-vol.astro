---

const cardData = [
    {
        title: "Host a meetup",
        description: "If you're interested in showcasing your office as the venue for an exciting data engineering meetup, reach out to us today!",
        image: "/meetup/host.jpg",
        url: "https://forms.gle/XEx9kT6TMajcK61m7",
    },
    {
        title: "Speak at a meetup",
        description: "We're always looking for innovative data people to share their voices and wisdom with our growing data engineering community.",
        image: "/meetup/speak.jpg",
        url: "https://dataengconf.com.au/forms/meetup-talk/",
    },
    {
        title: "Volunter for meetups",
        description: "Want to give back to the community by joining our meetup organising team. We would love the help!",
        image: "/meetup/volunteer.jpg",
        url: "https://forms.gle/EHF7nwzs8E7UFwGq6",
    }
]
---
<div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Get involved in the community</h2>
        <p class="mt-2 text-lg leading-8 text-gray-600">Support your community through speaking, hosting and volunteering</p>
      </div>
      <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
 
        {cardData.map((card) => (
          <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
            <img src={card.image} alt={card.title} class="absolute inset-0 -z-10 h-full w-full object-cover">
            <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
            <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
            <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
            </div>
            <h3 class="mt-3 text-3xl font-semibold leading-6 text-white">
              <a href={card.url}>
                <span >{card.title}</span>
              </a>
            </h3>
            <p class="mt-3 text-lg font-semibold leading-6 text-white">
              <a href={card.url}>
                <span >{card.description}</span>
              </a>
            </p>
          </article>
        ))}
      </div>
      
    </div>
  </div>
  