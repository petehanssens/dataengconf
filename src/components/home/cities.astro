---
import { Image } from 'astro:assets';
import Perth from '../../assets/images/perth.webp';
import Sydney from '../../assets/images/sydney.webp';
import Brisbane from '../../assets/images/brisbane.webp';
import Melbourne from '../../assets/images/melbourne.webp';
---
<div class="bg-white py-24 md:py-32 lg:py-40">
    <div class="mx-auto grid max-w-7xl grid-cols-1 gap-x-8 gap-y-20 px-6 lg:px-8 xl:grid-cols-3">
      <ul role="list" class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-3">
        <li>
          <a href="/conference/perth/">
            <div class="mx-auto max-w-2xl">
              <Image class="aspect-[3/2] w-full rounded-2xl object-cover" 
                src={Perth}
                alt="Ritz Carlton, Perth" 
                width={800} 
                format="webp"
              />
              <div class="text-center text-2xl md:text-7xl text-white top-1/2 -translate-y-48">
                <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">Perth</h1>
              </div>
            </div>
          </a>
        </li>
        <li>
          <a href="/conference/sydney/">
            <Image class="aspect-[3/2] w-full rounded-2xl object-cover" 
              src={Sydney}
              alt="Hilton Sydney" 
              width={800} 
              format="webp"
            />
            <div class="text-center text-2xl md:text-7xl text-white top-1/2 -translate-y-48">
              <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">Sydney</h1>
            </div>
          </a>
        </li>
        <li>
          <a href="/conference/brisbane/">
            <Image class="aspect-[3/2] w-full rounded-2xl object-cover" 
              src={Brisbane} 
              alt="Brisbane Convention and Entertainment Centre"
              width={800} 
              format="webp"
            />        
            <div class="text-center text-2xl md:text-7xl text-white top-1/2 -translate-y-48">
              <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">Brisbane</h1>
            </div>
          </a>
        </li>
        <li>
          <a href="/conference/melbourne/">
            <Image class="aspect-[3/2] w-full rounded-2xl object-cover" 
              src={Melbourne} 
              alt="Edge, FedSquare" 
              width={800} 
              format="webp"
            />
            <div class="text-center text-2xl md:text-7xl text-white top-1/2 -translate-y-48">
              <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">Melbourne</h1>
            </div>
          </a>
        </li>
      </ul>
    </div>
  </div>
  