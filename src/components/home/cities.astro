---
import { Image } from '@astrojs/image/components';
const Perth = './images/perth.webp'
const Sydney = './images/sydney.webp'
const Brisbane = './images/brisbane.webp'
const Melbourne = './images/melbourne.webp'
---
<div class="bg-white py-24 md:py-32 lg:py-40">
    <div class="mx-auto grid max-w-7xl grid-cols-1 gap-x-8 gap-y-20 px-6 lg:px-8 xl:grid-cols-3">
      <ul role="list" class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-3">
        <li>
          <a href="/conference/perth/">
            <Image class="aspect-[3/2] w-full rounded-2xl object-cover" src={Perth} alt="Ritz Carlton, Perth" width="800" aspectRatio="3:2">
            <h3 class="mt-6 text-lg text-center font-semibold leading-8 text-gray-900">Perth</h3>
          </a>
        </li>
        <li>
          <a href="/conference/sydney/">
            <Image class="aspect-[3/2] w-full rounded-2xl object-cover" src={Sydney} alt="Hilton Sydney" width="800" aspectRatio="3:2">
            <h3 class="mt-6 text-lg text-center font-semibold leading-8 text-gray-900">Sydney</h3>
          </a>
        </li>
        <li>
          <a href="/conference/brisbane/">
            <Image class="aspect-[3/2] w-full rounded-2xl object-cover" src={Brisbane} alt="Brisbane Convention and Entertainment Centre" width="800" aspectRatio="3:2">
            <h3 class="mt-6 text-lg text-center font-semibold leading-8 text-gray-900">Brisbane</h3>
          </a>
        </li>
        <li>
          <a href="/conference/melbourne/">
            <Image class="aspect-[3/2] w-full rounded-2xl object-cover" src={Melbourne} alt="Edge, FedSquare" width="800" aspectRatio="3:2">
            <h3 class="mt-6 text-lg text-center font-semibold leading-8 text-gray-900">Melbourne</h3>
          </a>
        </li>
      </ul>
    </div>
  </div>
  