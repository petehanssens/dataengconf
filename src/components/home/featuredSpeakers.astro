---
const MelbourneSpeakersURL = 'https://sessionize.com/api/v2/2gv8oeqy/view/Speakers';
import {fetchData} from '../conference/allData.astro';
const melbourneSpeakers = await fetchData(MelbourneSpeakersURL)
const featuredSpeakers = melbourneSpeakers  .filter(speaker => speaker.isTopSpeaker === true);
---
<div class="bg-white">
    <div class="mx-auto max-w-2xl px-4 py-24 sm:px-6 sm:py-32 lg:max-w-7xl lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Our featured speakers</h2>
        <p class="mt-4 text-gray-500">DataEngBytes is the one conference where you can see some of the brightest minds in MLOps and Data Engineering both locally and internationally.</p>
      </div>
      {[0,1,2,3,4].map(i => {
        return <div class="overflow-hidden bg-white py-32">
          <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8">
            <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-12 gap-y-16 lg:mx-0 lg:min-w-full lg:max-w-none lg:flex-none lg:gap-y-8">
              <div class="lg:col-end-1 lg:w-full lg:max-w-lg lg:pb-8">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{featuredSpeakers[i].fullName}</h2>
                <p class="mt-6 text-xl leading-8 text-gray-600">{featuredSpeakers[i].tagline}</p>
                <p class="mt-6 text-base leading-7 text-gray-600">{featuredSpeakers[i].bio}</p>
                <div class="mt-10 flex">
                  <a href="https://www.youtube.com/dataengau" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">View on YouTube <span aria-hidden="true">&rarr;</span></a>
                </div>
              </div>
              <div class="flex flex-wrap items-start justify-end gap-6 sm:gap-8 lg:contents">
                <div class="w-0 flex-auto lg:ml-auto lg:w-auto lg:flex-none lg:self-end">
                  <img src={featuredSpeakers[i].profilePicture} alt="" class="aspect-[5/5] w-[37rem] max-w-none rounded-2xl bg-gray-50 object-cover">
                </div>
              </div>
            </div>
          </div>
        </div>
      })
      }
  </div>
</div>